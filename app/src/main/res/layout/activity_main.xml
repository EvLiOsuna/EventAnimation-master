<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent"
    tools:context="com.example.lily.eventanimation.MainActivity">

    <RelativeLayout
        android:id="@+id/animationCanvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonContainer">

        <ImageView
            android:id="@+id/faceIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp"
            android:src="@drawable/sun" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onButtonClick"
            android:background="#f4dd82"
            android:text="Animar" />
        <Button
            android:id="@+id/btnCiclo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ciclos"
            android:background="#f482c1"
            android:text="Ciclos" />
        <Button
            android:id="@+id/btnCiclo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f4b582"
            android:onClick="Acelerar"
            android:text="Lento" />
        <Button
            android:id="@+id/btnCiclo3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#82ddf4"
            android:layout_weight="1"
            android:onClick="DesAcelerar"
            android:text="Acelerar" />
    </LinearLayout>

</RelativeLayout>